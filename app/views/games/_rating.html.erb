<tr>
	<td>
	  <div class='player'>
		<%= image_tag(gravatar_url(rating.player, size: 24)) %>
		<%= link_to rating.player.name, player_game_path(rating.player, @game) %>
	  </div>
	</td>
	<td><%= render partial: 'flairs/flair', object: rating.player.flair %></td>
	<td><%= rating.value %></td>
	<td>
		<% rating_yesterday = rating.history_events.where("created_at < ?", Date.today).first %>
		<% unless rating_yesterday.nil? %>
			<% difference = rating.value - rating_yesterday.value %>
			<% unless difference == 0 %>
				<span class="difference <%= difference < 0 ? "lost" : "won" %>">
					<%= "%+d" % difference %>
				</span>
			<% end %>
		<% end %>
	</td>
  <td><%= rating.winsPercentage %></td>
  <td><%= rating.wins %></td>
</tr>
